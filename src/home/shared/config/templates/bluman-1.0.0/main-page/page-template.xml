<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<page-template>
  <display-name>B Mustache Main Page</display-name>
  <descriptor>bluman.trampoline-1.0.0:landing-page</descriptor>
  <config>
    <property name="background-color" type="String">blue</property>
  </config>
  <can-render>
    <content-type>trampoline</content-type>
  </can-render>
  <regions>
    <region name="main">
      <part-component name="TrampolineBuy" descriptor="bluman.trampoline-1.0.0:trampoline-buy">
        <config>
          <property name="text" type="String">Take a part!</property>
        </config>
      </part-component>
      <!--part-component name="TrampolineAccessories" descriptor="bluman.trampoline-1.0.0:trampoline-accessories">
        <config>
          <property name="text" type="String">Take a part!</property>
        </config>
      </part-component-->
      <layout-component name="Layout70-30" descriptor="bluman.trampoline-1.0.0:trampoline-70-30">
        <regions>
          <region name="left">
            <part-component name="TrampolineDescription" descriptor="bluman.trampoline-1.0.0:trampoline-description">
              <config/>
            </part-component>
            <part-component name="TrampolineCarousel" descriptor="bluman.trampoline-1.0.0:trampoline-carousel">
              <config/>
            </part-component>
            <part-component name="TrampolineComments" descriptor="bluman.trampoline-1.0.0:trampoline-comments">
              <config>
                <property name="maxCount" type="String">10</property>
              </config>
            </part-component>
          </region>
          <region name="right">
            <part-component name="TrampolineAccessories" descriptor="bluman.trampoline-1.0.0:trampoline-accessories">
              <config/>
            </part-component>
          </region>
        </regions>
      </layout-component>
    </region>
  </regions>
</page-template>
