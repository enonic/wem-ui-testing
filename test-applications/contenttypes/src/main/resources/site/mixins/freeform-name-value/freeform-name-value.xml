<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name>name / value</display-name>
  <form>
    <input type="TextLine" name="name">
      <label>Name</label>
      <help-text></help-text>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input type="TextLine" name="value">
      <label>Value</label>
      <help-text></help-text>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</mixin>